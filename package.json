{
  "name": "electron-daisyui-framework",
  "version": "1.0.0",
  "description": "Modern Electron Desktop App Framework based on daisyUI and Tailwind CSS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build-css\" \"wait-on dist/output.css && electron .\"",
    "dev-web": "concurrently \"npm run build-css\" \"wait-on dist/output.css && npx live-server --port=13012\"",
    "build-css": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "build-css-once": "npx tailwindcss -i ./src/input.css -o ./dist/output.css",
    "build": "npm run build-css-once && electron-builder",
    "dist": "npm run build-css-once && electron-builder --publish=never"
  },
  "dependencies": {},
  "devDependencies": {
    "tailwindcss": "^3.4.1",
    "daisyui": "^4.4.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.yourcompany.electron-framework",
    "productName": "Electron DaisyUI Framework",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "script.js",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      "icon.png"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    }
  },
  "keywords": ["electron", "daisyui", "tailwindcss", "framework", "desktop", "modern-ui"],
  "author": "Framework Developer",
  "license": "MIT"
}